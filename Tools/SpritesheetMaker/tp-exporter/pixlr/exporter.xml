<exporter version="1.0">
  <!-- identifier of the exporter -->
  <name>pixlr</name>

  <!-- display name of the exporter for the combo box -->
  <displayName>Pixlr</displayName>
 
  <!-- description of the exporter -->
  <description>Exporter for Pixlr - a pixel perfect game framework in Swift</description>
 
  <!-- exporter version -->
  <version>1.0</version>
 
  <!-- currently only one file allowed -
       more to come soon -->
  <files>
      <file>
          <!-- name of this file variable -->
          <name>pixlrjson</name>
 
          <!-- human readable name (for GUI) -->
          <displayName>Pixlr Sprite Sheet (json)</displayName>
 
          <!-- file extension for the file -->
          <fileExtension>json</fileExtension>

          <!-- description what the file contains, used in tooltips in the GUI -->
          <description>JSON data file for Pixlr sprite sheet</description>

          <!-- name of the template file -->
          <template>template.json</template>
      </file>
      <file>
            <!-- name of this file variable -->
            <name>classfile</name>

            <!-- human readable name (for GUI) -->
            <displayName>Class file</displayName>

            <!-- file extension for the file -->
            <fileExtension>swift</fileExtension>

            <!-- description what the file contains, used in tooltips in the GUI -->
            <description>Sprite Definition Class</description>

            <!-- write this file only for the first AutoSD variation -->
            <!-- values are: all (default), first, last -->
            <hasSeparateAutoSDFiles>first</hasSeparateAutoSDFiles>

            <!-- do not write a file for each multipack variation -->
            <hasSeparateMultiPackFiles>true</hasSeparateMultiPackFiles>

            <!-- name of the template file -->
            <template>pixlr.swift</template>
        </file>
  </files>
 
  <!-- target framework supports trimming -->
  <supportsTrimming>no</supportsTrimming>
 
  <!-- target framework supports rotated sprites -->
  <supportsRotation>no</supportsRotation>
 
  <!-- rotated sprites direction (cw/ccw) -->
  <rotationDirection>cw</rotationDirection>
 
  <!-- supports npot sizes -->
  <supportsNPOT>false</supportsNPOT>
 
  <!-- supports file name stripping (remove .png etc.) -->
  <supportsTrimSpriteNames>yes</supportsTrimSpriteNames>
 
  <!-- supports texture subpath -->
  <supportsTextureSubPath>no</supportsTextureSubPath>
</exporter>
